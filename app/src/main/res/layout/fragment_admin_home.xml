<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="80dp"
    android:layout_height="match_parent">

    <!-- RecyclerView untuk daftar artikel -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvArticlesAdmin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="72dp"
        android:clipToPadding="false"
        android:padding="16dp" />

    <!-- Floating Action Button untuk tambah artikel -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddArticle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/rvArticlesAdmin"
        app:layout_anchorGravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:contentDescription="Tambah Artikel"
        android:tint="@android:color/white"
        android:backgroundTint="@color/colorPrimary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
